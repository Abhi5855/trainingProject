{{#if oneUser}}
	<form method="POST" action="/update">
		<!-- <input type="hidden" name="{{_id}}" value="{{_id}}"> -->
		<div class="form-group">
			<label for="inputTitle">账号</label>
			<input type="text" name="name" value="{{name}}">
		</div>
		<div class="form-group">
			<label for="inputTitle">密码</label>
			<input type="text" name="password" value="{{password}}">
		</div>
		<button type="submit" style="margin:10px 0 0 135px">更新数据</button>
	</form>
{{else}}
	<form action="/add" method="POST">
		<div class="form-group">
			<label for="username">账号</label>
			<input id="username" type="text" name="name">
		</div>
		<div class="form-group">
			<label for="userpassword">密码</label>
			<input id="userpassword" type="text" name="password">
		</div>
		<button type="submit" style="margin:10px 0 0 135px">增加数据</button>
	</form>
{{/if}}

<div>
	<table>
		<thead>
			<tr>
				<th>姓名</th>
				<th>密码</th>
				<th>修改</th>
				<th>删除</th>
			</tr>
		</thead>
		<tbody>
			{{user}}
			{{#each user}}
			<tr>
				<td>{{name}}</td>
				<td>{{password}}</td>
				<td><a href="./update/{{_id}}" target="">修改</a></td>
				<td><a href="./delete/{{_id}}" target="">删除</a></td>
			</tr>
			{{/each}}
		</tbody>
	</table>
</div>